{% extends 'layout.html.twig' %}
{% block title %}Wipa - Profil
{% endblock %}
{% block content %}
<div class="container d-flex justify-content-start">
	<div class="col-12 col-md-6 mt-3">
		{% if user %}
		<div class="fs-1 fw-bold">
			Hello {{ user.username }} !
		</div>
		{% endif %}
	</div>
</div>
{% if photosUser is defined  %}
		<div class="container text-center mt-3">
			<div class="col-md-12">
				<div class="row row-cols-lg-5 row-cols-md-3 row-cols-2 g-0">
					{% for photoUser in photosUser %}
						<div class="col">
							<div class="img-container">
								<a href="#" data-photo-id="{{photoUser.id}}" data-photo-url="{{photoUser.link}}" data-photo-prompt="{{photoUser.prompt}}" data-photo-title="{{photoUser.title}}" data-photo-description="{{photoUser.description}}" data-photo-date="{{photoUser.date}}"><img src="{{photoUser.link }}" alt="" class="img-fluid img-fit pop-up-image"></a>
								{# to be displayed only if user is logged #}
								{% if user %}
									<form action="fav/add" method="POST">
										<input name="addfav" type="hidden" value="{{photoUser.id}}">
										<button type="submit" class="button-fav">
											<svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-heart" viewbox="0 0 16 16">
												<path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z"/>
											</svg>
										</button>
									</form>
								{% endif %}
								{# END OF to be displayed only if user is logged #}
								<div class="img-title">{{photoUser.title}}</div>
							</div>
						</div>
					{% endfor %}
				</div>
			</div>
		</div>
	{% else %}
<div class="container d-flex justify-content-start">
	<div class="fs-1 fw-bold">
		No photo to display !
	</div>
</div>
	{% endif %}
<div class="container d-flex justify-content-start">
	<div class="col-12 col-md-6">
		<a class="btn btn-primary mb-3 mt-4 btn-sm" href="/">Index</a>
	</div>
</div>
{% endblock %}
{% block javascript %}
	<script src="assets/js/jsindex.js"></script>
{% endblock %}

